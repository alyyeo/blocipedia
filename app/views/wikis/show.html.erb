<div class="row">
    <div class="col s8">
        <h2><%= markdown(@wiki.title) %></h2>
        <h5>Created by <%= link_to @wiki.user.name, @wiki.user %></h5>
        <p><%= markdown(@wiki.body) %></p>
    </div>
    
    <div class="col s4">
        <br/>
        <br/>
        <br/>
        <%= link_to "Edit", edit_wiki_path, class: 'btn waves-effect waves-light' %>
        <%= link_to "Delete", @wiki, method: :delete, class: 'btn waves-effect waves-light' %>
    </div>
</div>